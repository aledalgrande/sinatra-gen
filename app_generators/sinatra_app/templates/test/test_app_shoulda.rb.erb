require 'test_helper'

class <%= klass_name -%>Test < Test::Unit::TestCase

  context "<%= klass_name -%>" do
    <%- unless actions.empty? -%>
    <% actions.each do |meth, path| %>
    context "<%= meth %> <%= path %>" do
      setup do
        <%= meth %> '<%= path %>'
      end
      
      should "respond" do
        assert body
      end
    end
    
    <%- end -%>
    <%- else -%>
    context "getting the index" do
      setup do
        get '/'
      end
      
      should "respond" do
        assert body
      end
    end
    <%- end -%>
  end

end