require 'test_helper'

describe '<%= klass_name %>' do
  
  <%- unless actions.empty? -%>
  <% actions.each do |meth, path| %>  
  it 'should <%= meth %> <%= path %>' do
    <%= meth %>_it '<%= path %>'
    should.be.ok
  end
  
  <%- end -%>
  <%- else -%>  
  it 'should load the index' do
    get_it '/'
    should.be.ok  
  end
  <%- end -%>
  
end